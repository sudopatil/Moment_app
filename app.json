{
  "expo": {
    "name": "Moment-app",
    "slug": "Moment-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/moment_background.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Moment App to access your camera to take photos",
        "NSPhotoLibraryUsageDescription": "Allow Moment App to save photos to your gallery",
        "NSPhotoLibraryAddUsageDescription": "Allow Moment App to save photos to your gallery"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_MEDIA_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Moment App to access your camera"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Moment App to save photos to your gallery",
          "savePhotosPermission": "Allow Moment App to save photos to your gallery",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
