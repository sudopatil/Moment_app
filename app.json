{
  "expo": {
    "name": "Moment",
    "slug": "Moment-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon1.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/loading.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Moment App to access your camera to take photos",
        "NSPhotoLibraryUsageDescription": "Allow Moment App to access your photo library",
        "NSPhotoLibraryAddUsageDescription": "Allow Moment App to save photos to your gallery"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ],
      "package": "com.yourcompany.momentapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Moment App to access your camera"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Moment App to save photos to your gallery",
          "savePhotosPermission": "Allow Moment App to save photos to your gallery",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-asset",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Moment to access your photos",
          "cameraPermission": "Allow Moment to access your camera"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "e88004b4-cbfe-47ed-a8c8-3bd92c02d546"
      }
    }
  }
}
